<h2>Please Select your ingredients</h2>

<h2>Size</h2>
<form class="" action="/start_order" method="post">
  <div class="ingredient3">
    <div class="">
      <label for="small">
        <img src="/pics/small.jpg">
      </label>
    </div>
    <div class="">
      <label for="medium">
        <img src="/pics/medium.jpg">
      </label>
    </div>
    <div class="">
      <label for="large">
        <img src="/pics/large.jpg">
      </label>
    </div>
    <div class="">
      <input id="small" type="radio" name="pizza_size" value="small" checked><label for="small">Small</label>
    </div>
    <div class="">
      <input id="medium" type="radio" name="pizza_size" value="medium"><label for="medium">Medium</label>
    </div>
    <div class="">
      <input id="large" type="radio" name="pizza_size" value="large"><label for="large">Large</label>
    </div>
  </div>
  <br>

  <h2>Meat</h2>
  <div class="ingredient3">
    <div class="">
      <label for="pepperoni">
        <img src="/pics/pepperoni.jpg">
      </label>
    </div>
    <div class="">
      <label for="sausage">
        <img src="/pics/sausage.jpg">
      </label>
    </div>
    <div class="">
      <label for="chicken">
        <img src="/pics/chicken.jpg">
      </label>
    </div>
    <div class="">
      <input id="pepperoni" type="checkbox" name="pizza_meat[]" value="pepperoni"><label for="pepperoni">Pepperoni</label>
    </div>
    <div class="">
      <input id="sausage" type="checkbox" name="pizza_meat[]" value="sausage"><label for="sausage">Sausage</label>
    </div>
    <div class="">
      <input id="chicken" type="checkbox" name="pizza_meat[]" value="chicken"><label for="chicken">Chicken</label>
    </div>
  </div>
  <br>

  <h2>Cheese</h2>
  <div class="ingredient2">
    <div class="item1">
      <label for="regular">
        <img src="/pics/regular_cheese.jpg">
      </label>
    </div>
    <div class="item2">
      <label for="cheese3">
        <img src="/pics/3_cheese.jpg">
      </label>
    </div>
    <div>
      <input id="regular" type="radio" name="pizza_cheese" value="regular_cheese" checked><label for="regular_cheese">Regular</label>
    </div>
    <div>
      <input id="cheese3" type="radio" name="pizza_cheese" value="3_cheese"><label for="cheese3">3 Cheese</label>
    </div>
  </div>
  <br>

  <h2>Veggies</h2>
  <div class="ingredient3">
    <div class="">
      <label for="mushrooms">
      <img src="/pics/mushrooms.jpg">
      </label>
    </div>
    <div class="">
      <label for="peppers">
      <img src="/pics/peppers.jpg">
      </label>
    </div>
    <div class="">
      <label for="olives">
      <img src="/pics/olives.jpg">
      </label>
    </div>
    <div class="">
      <input id="mushrooms" type="checkbox" name="pizza_veggies[]" value="mushrooms"><label for="mushrooms">Mushrooms</label>
    </div>
    <div class="">
      <input id="peppers" type="checkbox" name="pizza_veggies[]" value="peppers"><label for="peppers">Peppers</label>
    </div>
    <div class="">
      <input id="olives" type="checkbox" name="pizza_veggies[]" value="olives"><label for="olives">Olives</label>
    </div>
  </div>
  <br>

  <h2>Crust</h2>
  <div class="ingredient2">
    <div>
      <label for="pan">
        <img src="/pics/pan_crust.jpg">
      </label>
    </div>
    <div class="">
      <label for="thin">
      <img src="/pics/thin.jpg">
      </label>
    </div>
    <div class="">
      <input id="pan" type="radio" name="pizza_crust" value="pan_crust" checked><label for="pan">Pan Crust</label>
    </div>
    <div>
      <input id="thin" type="radio" name="pizza_crust" value="thin"><label for="thin">Thin Crust</label>
    </div>
  </div>
  <br>

  <h2>Sauce</h2>
  <div class="ingredient3">
    <div>
      <label for="sauce">
        <img name="pizza_sauce" src="/pics/pizza_sauce.jpg">
      </label>
    </div>
    <div>
      <label for="bbq">
      <img src="/pics/bbq.jpg">
      </label>
    </div>
    <div>
      <label for="ranch">
      <img src="/pics/ranch.jpg">
      </label>
    </div>
    <div>
      <input id="sauce" type="radio" name="pizza_sauce" value="pizza_sauce" checked><label for="sauce">Pizza Sauce</label>
    </div>
    <div>
      <input id="bbq" type="radio" name="pizza_sauce" value="bbq"><label for="bbq">BBQ</label>
    </div>
    <div>
      <input id="ranch" type="radio" name="pizza_sauce" value="ranch"><label for="ranch">Ranch</label>
    </div>
  </div>
  <br><br>

<input class="submit" type="submit" value="Continue">
<input type="hidden" name="ingredients_array" value="<%= ingredients_array%>">

</form>
